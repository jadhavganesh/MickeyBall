<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_gameplay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainback"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Gameplay"
    tools:showIn="@layout/activity_gameplay">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        style="@style/Widget.Design.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_green_dark"
        android:clickable="true"
        android:focusable="false"
        android:src="@drawable/mickeyplay"
        app:backgroundTint="@android:color/holo_red_dark"
        app:fabSize="normal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        style="@style/Widget.Design.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_orange_light"
        android:clickable="true"
        android:focusable="false"
        android:src="@drawable/mickeyplay"
        app:backgroundTint="@android:color/holo_red_dark"
        app:fabSize="normal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton3"
        style="@style/Widget.Design.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="?attr/colorAccent"
        android:clickable="true"
        android:focusable="false"
        android:src="@drawable/mickeyplay"
        app:backgroundTint="@android:color/holo_red_dark"
        app:fabSize="normal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton5"
        style="@style/Widget.Design.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_purple"
        android:clickable="true"
        android:focusable="false"
        android:src="@drawable/mickeyplay"
        app:backgroundTint="@android:color/holo_red_dark"
        app:elevation="24dp"
        app:fabSize="normal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton4"
        style="@style/Widget.Design.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_red_dark"
        android:clickable="true"
        android:focusable="false"
        android:src="@drawable/mickeyplay"
        app:backgroundTint="@android:color/holo_red_dark"
        app:elevation="24dp"
        app:fabSize="normal" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:background="@android:color/transparent"
        android:fontFamily="casual"
        android:text="0"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:background="@android:color/transparent"
        android:fontFamily="casual"
        android:text="0"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="Time Progress"
        android:outlineProvider="background"
        android:pointerIcon="arrow"
        android:progressBackgroundTint="@android:color/background_dark"
        android:soundEffectsEnabled="true"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp"
        android:layout_marginStart="42dp"
        android:background="@android:color/transparent"
        android:text="Score :"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColorHighlight="@android:color/black"
        android:textColorLink="?android:attr/textColorPrimaryNoDisable"
        android:textCursorDrawable="@android:color/black"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/go"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:text="Restart"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold" />


</RelativeLayout>
